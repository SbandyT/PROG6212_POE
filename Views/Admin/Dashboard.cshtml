@model IEnumerable<ST10298613_PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>


<p>Welcome, admin! Below are the pending claims for your review:</p>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Lecturer.Name</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="claimID" value="@claim.Id" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>

                    <form asp-action="RejectClaim" method="post">
                        <input type="hidden" name="claimID" value="@claim.Id" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

