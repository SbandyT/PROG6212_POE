@model ST10298613_PROG6212_POE.Models.Claim

@{
    ViewData["Title"] = "Review Claim";
}

<h1>Review Claim</h1>


<p><strong>Lecturer:</strong> @Model.Lecturer.Name</p>
<p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
<p><strong>Rate per Hour:</strong> @Model.Lecturer.HourlyRate</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount</p>
<p><strong>Date Submitted:</strong> @Model.SubmissionDate.ToShortDateString()</p>

<form asp-action="ApproveClaim" method="post">
    <input type="hidden" name="ClaimId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Approve</button>
</form>

<form asp-action="RejectClaim" method="post">
    <input type="hidden" name="ClaimId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Reject</button>
</form>
