<h1>Review Claims</h1>
<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>
