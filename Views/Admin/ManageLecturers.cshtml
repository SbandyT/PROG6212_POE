<h1>Manage Lecturers</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Id</td>
                <td>@lecturer.Name</td>
                <td>@lecturer.Email</td>
            </tr>
        }
    </tbody>
</table>
