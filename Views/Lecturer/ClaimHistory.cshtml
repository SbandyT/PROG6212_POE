@model IEnumerable<ST10298613_PROG6212_POE.Models.Claim>

@{
    ViewData["Title"] = "Claim History";
}

<h1>Your Claim History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours Worked</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Date Submitted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Lecturer.Name</td>
                <td>@claim.Id</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.Status</td>
                <td>@claim.SubmissionDate</td>
                <td class="status">@claim.Status</td>
            </tr>
        }
    </tbody>
</table>

