<h1>HR Dashboard</h1>
<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Total Payment</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-controller="HR" asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-success">Approve</button>
                    </form>
                    <form asp-controller="HR" asp-action="RejectClaim" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
